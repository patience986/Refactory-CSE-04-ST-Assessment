    <script>
        document.getElementById('flight-form').addEventListener('submit', function (e) {
            e.preventDefault();

            // Clear all previous error messages
            document.querySelectorAll('.error-message').forEach(function (element) {
                element.textContent = '';
            });

            let isValid = true;

            // Validate Full Name
            const fullName = document.getElementById('full-name');
            if (fullName.value.trim() === '') {
                isValid = false;
                document.getElementById('full-name-error').textContent = 'Invalid.';
            }

            // Validate Gender
            const gender = document.getElementById('gender');
            if (gender.value === '') {
                isValid = false;
                document.getElementById('gender-error').textContent = 'Invalid.';
            }

            // Validate Date of Birth
            const dob = document.getElementById('dob');
            if (dob.value === '') {
                isValid = false;
                document.getElementById('dob-error').textContent = 'Invalid.';
            }

            // Validate Nationality
            const nationality = document.getElementById('nationality');
            if (nationality.value.trim() === '') {
                isValid = false;
                document.getElementById('nationality-error').textContent = 'Invalid.';
            }

            // Validate Phone Number
            const phoneNumber = document.getElementById('phone-number');
            if (phoneNumber.value.trim() === '') {
                isValid = false;
                document.getElementById('phone-number-error').textContent = 'Invalid.';
            }

            // Validate Email
            const email = document.getElementById('email');
            if (email.value.trim() === '') {
                isValid = false;
                document.getElementById('email-error').textContent = 'Invalid.';
            }

            // Validate Emergency Phone Number
            const emergencyPhone = document.getElementById('emergency-phone');
            if (emergencyPhone.value.trim() === '') {
                isValid = false;
                document.getElementById('emergency-phone-error').textContent = 'Invalid.';
            }

                // Validate Passport Number
                const passportNumber = document.getElementById('passport-number');
                if (passportNumber.value.trim() === '') {
                    isValid = false;
                    document.getElementById('passport-number-error').textContent = 'Invalid.';
                }

                // Validate Departure City
                const departureCity = document.getElementById('departure-city');
                if (departureCity.value.trim() === '') {
                    isValid = false;
                    document.getElementById('departure-city-error').textContent = 'Invalid.';
                }

                // Validate Destination City
                const destinationCity = document.getElementById('destination-city');
                if (destinationCity.value.trim() === '') {
                    isValid = false;
                    document.getElementById('destination-city-error').textContent = 'Invalid.';
                }

                // If the form is valid, show success message
                if (isValid) {
                    document.getElementById('success-message').textContent = 'Invalid';
                    
                    // Clear form fields after successful submission
                    document.getElementById('flight-form').reset();

                    // Clear success message after a few seconds
                    setTimeout(function() {
                        document.getElementById('success-message').textContent = '';
                    }, 3000);
                } else {
                    document.getElementById('success-message').textContent = '';  // Clear success message if form is invalid
                }
            });
    </script>
</body>
